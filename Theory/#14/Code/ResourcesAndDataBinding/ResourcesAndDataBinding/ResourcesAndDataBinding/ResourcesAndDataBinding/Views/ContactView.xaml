<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResourcesAndDataBinding.Views.ContactView">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Padding="20">

            <Label Text="First Name:" />

            <Entry Text="{Binding FirstName}"/>

            <Label Text="Last Name:" />

            <Entry Text="{Binding LastName}"/>


            <Label Text="Date of birth:"/>

            <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}"/>

            <StackLayout Orientation="Horizontal">

                <Label Text="Is family member?:" 
                       VerticalOptions="Center"/>

                <CheckBox IsChecked="{Binding IsFamilyMember}"
                          VerticalOptions="Center"/>

            </StackLayout>

            <Button x:Name="SaveButton" Text="Save" Clicked="Save_Clicked"/>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>